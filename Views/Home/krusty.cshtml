<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Juego Simpsons - Disparos</title>
    <style>
        body {
            font-family: Arial;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background: url('/img/krustybg.png') no-repeat center center fixed;
            background-size: cover;
        }

        #pantallaInicio {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 10;
        }

        #pantallaInicio h1 {
            margin: 30px 0 10px 0;
            font-size: 36px;
        }

        #pantallaInicio p {
            font-size: 18px;
            margin: 5px 0;
        }

        #pantallaInicio button {
            padding: 12px 24px;
            font-size: 18px;
            margin-top: 20px;
            background-color: #ffcc00;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

        #puntaje-cajita {
            position: absolute;
            top: 10px;
            left: 10px;
            color: black;
            font-size: 22px;
            font-weight: bold;
            background-color: rgba(255, 255, 0, 0.9);
            padding: 10px 20px;
            border-radius: 10px;
            z-index: 1000;
        }

        #temporizador {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 22px;
            font-weight: bold;
            color: white;
            background-color: rgba(0,0,0,0.6);
            padding: 10px 20px;
            border-radius: 10px;
            z-index: 1000;
        }

        #juego {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            z-index: 1;
        }

        .personaje, .obstaculo {
            position: absolute;
            width: 80px;
            height: 80px;
            cursor: crosshair;
            transition: transform 0.1s;
        }

        .personaje:hover, .obstaculo:hover {
            transform: scale(1.1);
        }

        .obstaculo {
            background-color: red;
            color: white;
            font-size: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        #mensaje-final {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2em;
            color: lightgreen;
            background-color: rgba(0, 0, 0, 0.6);
            padding: 10px 20px;
            border-radius: 10px;
            z-index: 1000;
        }
    </style>
</head>
<body>

<div id="pantallaInicio">
    <h1>üéØ Bienvenido al juego de disparos</h1>
    <p>Hac√© clic en los personajes de Los Simpson para ganar puntos.</p>
    <p>¬°Cuidado! A veces aparecer√° un ‚Äú-5‚Äù que te hace perder puntos si lo toc√°s o ignor√°s.</p>
    <p>Ten√©s 15 minutos para llegar a <strong>150 puntos</strong>. ¬°Buena suerte!</p>
    <button onclick="empezarJuego()">Empezar juego</button>
</div>

<div id="puntaje-cajita">Puntos: 0</div>
<div id="temporizador">Tiempo: 15:00</div>

<div id="juego"></div>
<div id="mensaje-final"></div>

<script>
    const juego = document.getElementById("juego");
    const puntajeCajita = document.getElementById("puntaje-cajita");
    const mensajeFinal = document.getElementById("mensaje-final");
    const pantallaInicio = document.getElementById("pantallaInicio");
    const temporizador = document.getElementById("temporizador");

    let puntos = 0;
    let juegoActivo = false;
    let tiempoRestante = 900;
    let temporizadorInterval;
    let aparicionInterval;

    const imagenes = [
        "/img/homer.png",
        "/img/bart.png",
        "/img/duff.png",
        "/img/homer2.png",
        "/img/nelson.png"
    ];

    function actualizarPuntos(valor) {
        puntos += valor;
        puntajeCajita.innerText = `Puntos: ${puntos}`;
        puntajeCajita.style.color = puntos < 0 ? "red" : "#222";

        if (puntos >= 150 && juegoActivo) {
            finalizarJuego("üéâ ¬°Ganaste el juego!", "Ganaste4");
        }

        if (puntos <= -25 && juegoActivo) {
            finalizarJuego("üí• ¬°Perdiste el juego!", "Perdiste4");
        }
    }

    function finalizarJuego(mensaje, redireccion) {
        juegoActivo = false;
        clearInterval(aparicionInterval);
        clearInterval(temporizadorInterval);
        juego.querySelectorAll(".personaje, .obstaculo").forEach(p => p.remove());
        mensajeFinal.innerText = mensaje;
        setTimeout(() => window.location.href = redireccion, 1000);
    }

    function actualizarTemporizador() {
        if (!juegoActivo) return;
        tiempoRestante--;
        const minutos = Math.floor(tiempoRestante / 60);
        const segundos = tiempoRestante % 60;
        temporizador.innerText = `Tiempo: ${minutos}:${segundos < 10 ? "0" + segundos : segundos}`;

        if (tiempoRestante <= 0) {
            finalizarJuego("‚è∞ ¬°Se acab√≥ el tiempo!", "Perdiste4");
        }
    }

    function moverElemento(elem) {
        const velocidad = 4 + Math.random() * 4;
        let dx = (Math.random() < 0.5 ? -1 : 1) * velocidad;
        let dy = (Math.random() < 0.5 ? -1 : 1) * velocidad;

        const mover = setInterval(() => {
            const x = elem.offsetLeft + dx;
            const y = elem.offsetTop + dy;

            if (x <= 0 || x >= juego.clientWidth - 80) dx = -dx;
            if (y <= 0 || y >= juego.clientHeight - 80) dy = -dy;

            elem.style.left = `${elem.offsetLeft + dx}px`;
            elem.style.top = `${elem.offsetTop + dy}px`;
        }, 50);
        return mover;
    }

    function aparecerElemento() {
        if (!juegoActivo) return;

        const esObstaculo = Math.random() < 0.25;
        const elemento = document.createElement(esObstaculo ? "div" : "img");

        if (esObstaculo) {
            elemento.textContent = "-5";
            elemento.className = "obstaculo";
        } else {
            elemento.src = imagenes[Math.floor(Math.random() * imagenes.length)];
            elemento.classList.add("personaje");
        }

        const maxX = juego.clientWidth - 80;
        const maxY = juego.clientHeight - 80;
        const x = Math.random() * maxX;
        const y = Math.random() * maxY;

        elemento.style.left = `${x}px`;
        elemento.style.top = `${y}px`;

        let fueClickeado = false;
        const movimiento = moverElemento(elemento);

        elemento.addEventListener("click", () => {
            if (!fueClickeado) {
                fueClickeado = true;
                actualizarPuntos(esObstaculo ? -5 : 8);
                clearInterval(movimiento);
                elemento.remove();
            }
        });

        juego.appendChild(elemento);

        setTimeout(() => {
            if (!fueClickeado && juego.contains(elemento)) {
                actualizarPuntos(esObstaculo ? -5 : -4);
                clearInterval(movimiento);
                elemento.remove();
            }
        }, 4000);
    }

    function empezarJuego() {
        pantallaInicio.style.display = "none";
        juegoActivo = true;
        puntos = 0;
        tiempoRestante = 900;
        puntajeCajita.innerText = "Puntos: 0";
        temporizador.innerText = "Tiempo: 15:00";
        temporizadorInterval = setInterval(actualizarTemporizador, 1000);
        aparicionInterval = setInterval(() => {
            for (let i = 0; i < 2; i++) aparecerElemento();
        }, 800);
    }
</script>

</body>
</html>


