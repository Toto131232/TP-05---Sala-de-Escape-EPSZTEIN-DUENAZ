@{
    ViewData["Title"] = "Juego de Rosquillas";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background: url('/img/CasaSimpson.webp') no-repeat center center fixed;
            background-size: cover;
        }

        #pantallaInicio {
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.8);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 10;
        }

        #info {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            font-size: 20px;
            background-color: rgba(0,0,0,0.5);
            padding: 10px;
            border-radius: 8px;
        }

        .rosquilla {
            position: absolute;
            width: 50px;
            height: 50px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div id="pantallaInicio">
    <h1>Bienvenido al juego de rosquillas üç©</h1>
    <p>Hac√© clic en las rosquillas antes de que lleguen al suelo para ganar puntos.</p>
    <p>Si una rosquilla cae al piso, perd√©s 3 segundos. Ten√©s 10 minutos para juntar 50 puntos.</p>
    <button onclick="empezarJuego()">Empezar juego</button>
</div>

<div id="info">
    Tiempo restante: <span id="cronometro">10:00</span> | Puntos: <span id="puntos">0</span>
</div>

<script>
    let tiempoRestante = 600; // 10 minutos
    let puntos = 0;
    let intervaloCrono;
    let intervaloRosquillas;

    function empezarJuego() {
        document.getElementById('pantallaInicio').style.display = 'none';
        iniciarCronometro();
        intervaloRosquillas = setInterval(crearRosquilla, 600);
    }

    function iniciarCronometro() {
        intervaloCrono = setInterval(() => {
            if (tiempoRestante > 0) {
                tiempoRestante--;
                actualizarCronometro();
            } else {
                finalizarJuego(false); // perdi√≥
            }
        }, 1000);
    }

    function actualizarCronometro() {
        let min = Math.floor(tiempoRestante / 60);
        let seg = tiempoRestante % 60;
        document.getElementById("cronometro").textContent = `${min.toString().padStart(2, '0')}:${seg.toString().padStart(2, '0')}`;
    }

    function sumarPuntos(cantidad) {
        puntos += cantidad;
        document.getElementById("puntos").textContent = puntos;

        if (puntos >= 50) {
            finalizarJuego(true); // gan√≥
        }
    }

    function restarSegundos(cantidad) {
        tiempoRestante -= cantidad;
        if (tiempoRestante < 0) tiempoRestante = 0;
        actualizarCronometro();
        if (tiempoRestante === 0) {
            finalizarJuego(false);
        }
    }

    function finalizarJuego(gano) {
        clearInterval(intervaloCrono);
        clearInterval(intervaloRosquillas);
        if (gano) {
            window.location.href = "/Home/Ganaste1";
        } else {
            window.location.href = "/Home/Perdiste1";
        }
    }

    function crearRosquilla() {
        const rosquilla = document.createElement('img');
        rosquilla.src = '/img/Dona.png';
        rosquilla.className = 'rosquilla';
        rosquilla.style.left = Math.random() * (window.innerWidth - 50) + 'px';
        rosquilla.style.top = '-60px';
        document.body.appendChild(rosquilla);

        let posY = -60;
        const velocidad = 2 + Math.random() * 3;

        const caer = setInterval(() => {
            posY += velocidad;
            rosquilla.style.top = posY + 'px';

            if (posY > window.innerHeight) {
                rosquilla.remove();
                clearInterval(caer);
                restarSegundos(3);
            }
        }, 16);

        rosquilla.onclick = () => {
            rosquilla.remove();
            clearInterval(caer);
            sumarPuntos(1);
        };
    }
</script>

</body>
</html>
