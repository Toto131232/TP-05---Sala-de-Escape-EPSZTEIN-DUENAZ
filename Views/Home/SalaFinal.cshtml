@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Final del Escape Room</title>
    <style>
        body {
            background-color: #fffae6;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding-top: 100px;
            color: #2c3e50;
        }

        h1 {
            font-size: 4em;
            color: #27ae60;
        }

        h3 {
            font-size: 2em;
            margin-top: -20px;
            margin-bottom: 30px;
        }

        input[type="text"] {
            padding: 12px;
            font-size: 18px;
            width: 300px;
            border: 2px solid #2980b9;
            border-radius: 8px;
        }

        button {
            margin-top: 20px;
            padding: 12px 30px;
            font-size: 18px;
            background-color: #2980b9;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #1abc9c;
        }

        .mensaje-error {
            color: red;
            margin-top: 20px;
            font-weight: bold;
            display: none;
        }

        a {
            display: inline-block;
            margin-top: 30px;
            text-decoration: none;
            background-color: #2980b9;
            color: white;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: bold;
        }

        a:hover {
            background-color: #1abc9c;
        }
    </style>
</head>
<body>

    <h1>¡Última etapa!</h1>
    <h3>Para terminar el Escape Room tienes que formar la frase<br>con las palabras que fuiste poniendo en las contraseñas</h3>

    <input type="text" id="frase" placeholder="Escribí la frase completa">
    <br />
    <button onclick="verificarFrase()">Verificar</button>

    <div class="mensaje-error" id="error">❌ Esa no es la clave final.</div>

    <br />
    <a href="/Home/Menu">Volver a la Sala</a>

    <script>
        function verificarFrase() {
            const valor = document.getElementById("frase").value.trim().toLowerCase();
            const correcta = "el barto lo hizo de nuevo";
            const error = document.getElementById("error");

            if (valor === correcta) {
                window.location.href = "/Home/ganar";
            } else {
                error.style.display = "block";
            }
        }
    </script>

</body>
</html>
