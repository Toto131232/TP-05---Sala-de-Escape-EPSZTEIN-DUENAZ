@{
    ViewData["Title"] = "Escape Room Springfield";
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Escape Room Springfield</title>
  <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Fredoka', sans-serif;
      background: url('img/personajestodos.jpeg') no-repeat center center fixed;
      background-size: cover;
      color: white;
    }

    .overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.4);
      z-index: 0;
    }

    .contenido, .menu {
      position: relative;
      z-index: 1;
      max-width: 900px;
      margin: 60px auto;
      background-color: rgba(255, 255, 255, 0.85);
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 8px 30px rgba(0,0,0,0.3);
      color: #333;
    }

    h1 {
      font-size: 3em;
      color: #f28b00;
      margin-bottom: 20px;
    }

    .btn-start, .btn-continue {
      background-color: #ff5722;
      color: white;
      font-size: 1.3em;
      padding: 15px 30px;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
    }

    .btn-start:hover, .btn-continue:hover {
      background-color: #e64a19;
      transform: scale(1.05);
    }

    .imagen-inferior img {
      max-width: 100%;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.25);
    }

    .seccion {
      margin: 20px auto;
      background-color: #007BFF;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .seccion p {
      color: white;
    }

    input {
      padding: 8px;
      margin-bottom: 10px;
      width: 80%;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .seccion button {
      background-color: white;
      color: #007BFF;
    }

    .seccion button:hover:enabled {
      background-color: #0056b3;
      color: white;
    }

    .seccion button:disabled {
      background-color: #ccc;
      cursor: not-allowed;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="overlay"></div>

  <div id="pantalla-inicio" class="contenido">
    <h1>Escape Room Springfield</h1>
    <p>¡Bienvenido al juego!</p>
    <button class="btn-start" onclick="mostrarTexto()">Comenzar</button>
  </div>

  <div id="pantalla-texto" class="contenido" style="display:none;">
    <p style="font-size: 1.4em;">Eres Bart Simpson, tienes que encontrar a la familia Simpson que está en alguna parte de Springfield</p>
    <button class="btn-continue" onclick="mostrarMenu()">Continuar</button>
  </div>

  <div id="pantalla-menu" class="menu" style="display:none;">
    <h1>Escape Room Springfield</h1>

    <div class="imagen-inferior">
      <img src="img/mapa.png" alt="Mapa Springfield">
    </div>

    <div class="seccion">
      <p>Casa Simpsons</p>
      <a href="/Home/CasaSimpson" target="_blank">
        <button>Entrar a Sala 1</button>
      </a>
    </div>

    <div class="seccion">
      <p>Clave para Sala 2:</p>
      <div id="entrada2">
        <input type="text" oninput="verificarClave(this, 'boton2', 'clave2', 'entrada2')" placeholder="Escribe la clave">
      </div>
      <a href="/Home/PlantaNuclear" target="_blank">
        <button id="boton2" disabled>Entrar a Sala 2</button>
      </a>
    </div>

    <div class="seccion">
      <p>Clave para Sala 3:</p>
      <div id="entrada3">
        <input type="text" oninput="verificarClave(this, 'boton3', 'clave3', 'entrada3')" placeholder="Escribe la clave">
      </div>
      <a href="/Home/KwikEMart" target="_blank">
        <button id="boton3" disabled>Entrar a Sala 3</button>
      </a>
    </div>

    <div class="seccion">
      <p>Clave para Sala 4:</p>
      <div id="entrada4">
        <input type="text" oninput="verificarClave(this, 'boton4', 'clave4', 'entrada4')" placeholder="Escribe la clave">
      </div>
      <a href="/Home/krusty" target="_blank">
        <button id="boton4" disabled>Entrar a Sala 4</button>
      </a>
    </div>

    <div class="seccion">
      <p>Clave para Sala 5:</p>
      <div id="entrada5">
        <input type="text" oninput="verificarClave(this, 'boton5', 'clave5', 'entrada5')" placeholder="Escribe la clave">
      </div>
      <a href="/Home/city" target="_blank">
        <button id="boton5" disabled>Entrar a Sala 5</button>
      </a>
    </div>
     <div class="seccion">
      <p>Clave para Sala 5:</p>
      <div id="entrada6">
        <input type="text" oninput="verificarClave(this, 'boton5', 'clave6', 'entrada6')" placeholder="Escribe la clave">
      </div>
      <a href="/Home/ganar" target="_blank">
        <button id="boton5" disabled>QUE FOR</button>
      </a>
    </div>

  </div>

  <script>
    const claves = {
      clave2: "ayer",
      clave3: "comi",
      clave4: "un",
      clave5: "pancho",
      clave6: "ayer comi un pancho"
    };

    function verificarClave(inputElem, botonId, claveNombre, contenedorId) {
      const valor = inputElem.value.trim().toLowerCase();
      if (valor === claves[claveNombre]) {
        document.getElementById(botonId).disabled = false;
        document.getElementById(contenedorId).innerHTML = "<p style='color:green;'>✔ Clave correcta</p>";
      }
    }

    function mostrarTexto() {
      document.getElementById('pantalla-inicio').style.display = 'none';
      document.getElementById('pantalla-texto').style.display = 'block';
    }

    function mostrarMenu() {
      document.getElementById('pantalla-texto').style.display = 'none';
      document.getElementById('pantalla-menu').style.display = 'block';
    }
  </script>
</body>
</html>