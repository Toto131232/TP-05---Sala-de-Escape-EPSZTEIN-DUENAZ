@{
    ViewData["Title"] = "Escape Room Springfield";
}

<!-- Fuente moderna -->
<link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        margin: 0;
        font-family: 'Fredoka', sans-serif;
        background: url('img/personajestodos.jpeg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

    .overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
        z-index: 0;
    }

    .contenido {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 60px auto;
        background-color: rgba(255, 255, 255, 0.85);
        padding: 40px;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 8px 30px rgba(0,0,0,0.3);
    }

    h1 {
        font-size: 3em;
        color: #f28b00;
        margin-bottom: 20px;
    }

    .intro {
        font-size: 1.2em;
        color: #333;
        margin-bottom: 25px;
    }

    .btn-start {
        background-color: #ff5722;
        color: white;
        font-size: 1.3em;
        padding: 15px 30px;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-start:hover {
        background-color: #e64a19;
        transform: scale(1.05);
    }

    .imagen-inferior {
        margin-top: 40px;
    }

    .imagen-inferior img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.25);
    }

    .botones-salas {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .boton-sala {
        padding: 12px 24px;
        font-size: 1.1em;
        border: none;
        border-radius: 10px;
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
        transition: transform 0.2s;
        min-width: 120px;
    }

    .boton-sala:disabled {
        background-color: #aaa;
        cursor: not-allowed;
    }

    .boton-sala:hover:not(:disabled) {
        transform: scale(1.05);
    }
</style>

<div class="overlay"></div>

<div class="contenido">
    <h1>Escape Room Springfield</h1>

    <p class="intro">
        
    </p>

    <form asp-controller="Game" asp-action="Start">
        <button class="btn-start">Comenzar Aventura</button>
    </form>

    <div class="imagen-inferior">
        <img src="img/mapa.png" alt="Mapa Springfield">
    </div>

    <!-- Botones para las salas -->
    <div class="botones-salas">
        <button class="boton-sala" id="btnSala1" onclick="irASala(1)">Ir a Sala 1</button>
        <button class="boton-sala" id="btnSala2" onclick="irASala(2)" disabled>Ir a Sala 2</button>
        <button class="boton-sala" id="btnSala3" onclick="irASala(3)" disabled>Ir a Sala 3</button>
        <button class="boton-sala" id="btnSala4" onclick="irASala(4)" disabled>Ir a Sala 4</button>
        <button class="boton-sala" id="btnSala5" onclick="irASala(5)" disabled>Ir a Sala 5</button>
        <button class="boton-sala" id="btnSala6" onclick="irASala(6)" disabled>Ir a Sala 6</button>
        <button class="boton-sala" id="btnSala7" onclick="irASala(7)" disabled>Ir a Sala 7</button>
    </div>
</div>

<script>
    let progreso = 1;

    function irASala(numero) {
        if (numero === progreso) {
            // Simula avanzar a la sala
            window.location.href = `/Game/Sala${numero}`;
            progreso++;
            actualizarBotones();
        } else {
            alert("Tenés que completar la sala anterior primero.");
        }
    }

    function actualizarBotones() {
        for (let i = 1; i <= 7; i++) {
            const boton = document.getElementById(`btnSala${i}`);
            if (i === progreso) {
                boton.disabled = false;
            } else {
                boton.disabled = true;
            }
        }
    }

    actualizarBotones();
</script>