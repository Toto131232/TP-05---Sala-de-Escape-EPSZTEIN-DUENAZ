@{
    ViewData["Title"] = "Escape Room Springfield";
}

<!-- Fuente moderna -->
<link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        margin: 0;
        font-family: 'Fredoka', sans-serif;
        background: url('img/personajestodos.jpeg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

    .overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
        z-index: 0;
    }

    .contenido {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 60px auto;
        background-color: rgba(255, 255, 255, 0.85);
        padding: 40px;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 8px 30px rgba(0,0,0,0.3);
    }

    h1 {
        font-size: 3em;
        color: #f28b00;
        margin-bottom: 20px;
    }

    .intro {
        font-size: 1.2em;
        color: #333;
        margin-bottom: 25px;
    }

    .btn-start {
        background-color: #ff5722;
        color: white;
        font-size: 1.3em;
        padding: 15px 30px;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-start:hover {
        background-color: #e64a19;
        transform: scale(1.05);
        
    }

    .imagen-inferior {
        margin-top: 40px;
    }

    .imagen-inferior img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.25);
    }
    .botonera {
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 200px;
  margin: 0 auto;
}

button {
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  background-color: white;
  color: white;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  color: #007BFF;
}

button:hover:enabled {
  background-color: #0056b3;
}

button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
  color: #666;
}
.seccion {
      margin: 20px auto;
      background-color: #007BFF;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);

    }

    input {
      padding: 8px;
      margin-bottom: 10px;
      width: 80%;
    }
    p
    {
        color:white
    }

</style>

<div class="overlay"></div>

<div class="contenido">
    <h1>Escape Room Springfield</h1>

    <p class="intro">
        
    </p>

    <form asp-controller="Game" asp-action="Start">
        <button class="btn-start">Comenzar Aventura</button>
    </form>

    <div class="imagen-inferior">
        <img src="img/mapa.png" alt="Mapa Springfield">
    </div>

  <div class="seccion">
    <p>Casa Simpsons</p>
    <a href="/Home/CasaSimpson" target="_blank">
      <button>Entrar a Sala 1</button>
    </a>
  </div>

  <!-- Sala 2 a 6: con clave -->
  <div class="seccion">
    <p>Clave para Sala 2:</p>
    <div id="entrada2">
      <input type="text" oninput="verificarClave(this, 'boton2', 'clave2', 'entrada2')" placeholder="Escribe la clave">
    </div>
    <a href="/Home/PlantaNuclear" target="_blank">
      <button id="boton2" disabled>Entrar a Sala 2</button>
    </a>
  </div>

  <div class="seccion">
    <p>Clave para Sala 3:</p>
    <div id="entrada3">
      <input type="text" oninput="verificarClave(this, 'boton3', 'clave3', 'entrada3')" placeholder="Escribe la clave">
    </div>
    <a href="/Home/KwikEMart" target="_blank">
      <button id="boton3" disabled>Entrar a Sala 3</button>
    </a>
  </div>

  <div class="seccion">
    <p>Clave para Sala 4:</p>
    <div id="entrada4">
      <input type="text" oninput="verificarClave(this, 'boton4', 'clave4', 'entrada4')" placeholder="Escribe la clave">
    </div>
    <a href="/Home/krusty" target="_blank">
      <button id="boton4" disabled>Entrar a Sala 4</button>
    </a>
  </div>

  <div class="seccion">
    <p>Clave para Sala 5:</p>
    <div id="entrada5">
      <input type="text" oninput="verificarClave(this, 'boton5', 'clave5', 'entrada5')" placeholder="Escribe la clave">
    </div>
    <a href="/Home/city" target="_blank">
      <button id="boton5" disabled>Entrar a Sala 5</button>
    </a>
  </div>

  <div class="seccion">
    <p>Clave para Sala 6:</p>
    <div id="entrada6">
      <input type="text" oninput="verificarClave(this, 'boton6', 'clave6', 'entrada6')" placeholder="Escribe la clave">
    </div>
    <a href="https://www.ejemplo6.com" target="_blank">
      <button id="boton6" disabled>Entrar a Sala 6</button>
    </a>
  </div>

  <script>
    const claves = {
      clave2: "mundo",
      clave3: "xd",
      clave4: "media",
      clave5: "profe",
      clave6: "otra vez xd"
    };

    function verificarClave(inputElem, botonId, claveNombre, contenedorId) {
      const valor = inputElem.value.trim().toLowerCase();
      if (valor === claves[claveNombre]) {
        document.getElementById(botonId).disabled = false;
        document.getElementById(contenedorId).innerHTML = "<p style='color:green;'>✔ Clave correcta</p>";
      }
    }
  </script>